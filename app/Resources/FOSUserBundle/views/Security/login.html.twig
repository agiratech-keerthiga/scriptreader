{% extends 'layout.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}
{% block content %}

	{% if error %}
	   <div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
    
    <div class='login_screen'>
	    <center><h2>Login Form </h2></center>
		<form class="login_form" action="{{ path("fos_user_security_check") }}" method="post" novalidate="novalidate">
		   <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
			<fieldset>
                    <div class="form-group">
                        <label for="username">EMAIL <span style="color:red;">*</span></label>
                        <input type="text" id="username" placeholder="Email address" name="_username" value="{{ last_username }}" required="required" data-rule-required="true" data-msg-required="Required" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label for="password">PASSWORD <span style="color:red;">*</span></label>
                        <input type="password" id="password" placeholder="Password"  name="_password" required="required" data-rule-required="true" data-msg-required="Required" class="form-control" />
                    </div>
                    <div class="checkbox">
                        <div><label class="text-left"><input type="checkbox" id="remember_me" name="_remember_me" value="on" />Remember me</label> <label class="pull-right"><a href="{{ path('fos_user_resetting_request') }}" title="Have you forgotten your password?">Forgot Password ?</a></label></div>
                        <center><button type="submit" id="_submit" name="_submit" value="" class="btn btn-info login_button" />Login</button></center>
                    </div>
                </fieldset>
		</form>
	</div>

{% endblock content %}